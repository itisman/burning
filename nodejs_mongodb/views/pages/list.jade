extends ../layout
block content
    .container
        .row
            table.table.table-hover.table-bordered
                thead
                    tr
                        th id
                        th Name
                        th Director
                        th Country
                        th Year
                        th Language
                        th Description
                        th CreatedOn
                        th View
                        th Update
                        th Delete
                tbody
                    each item in movies
                        tr(class='item-id-#{item.id}')
                            td #{item.id}
                            td #{item.title}
                            td #{item.director}
                            td #{item.country}
                            td #{item.year}
                            td #{item.lan}
                            td #{item.desc}
                            td #{moment(item.meta.createdOn).format('MM/DD/YYYY')}
                            td: a(target='_blank', href='../movie/#{item.id}') View
                            td: a(target='_blank', href='../admin/update/#{item.id}') Update
                            td
                                button.btn.btn-danger.del(type='button', data-id='#{item.id}') Delete
